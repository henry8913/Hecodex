
{% unless settings.goal == blank %}
<div class="cart-progress">
{% assign goal = settings.goal | times:100 %}
<!-- Messaggistica di spedizione gratuita rimossa: manteniamo solo la barra di progresso -->

{% assign percentage = cart.total_price %}
<div class="cart-progress-bar">
<progress max="{{ goal }}" value="{{ cart.total_price }}" class="{% if cart.total_price >= goal %}free-shipp-ready{% endif %}">{{ percentage }}
</progress>   
<div class="progress-icon">
</div>
</div>
</div>
<style>

progress[value] {
	-webkit-appearance:none;
    -moz-appearance:none;        
    appearance: none;
	border: none;
	position: relative;
	margin: 0 0 ; 
    height: 7px;
    transition: all 0.3s linear;
  width:100%;
}
 .cart-progress-bar{
   position: relative;
    background: rgba(255,255,255, 0.15);
    height: 7px;
    border-radius:0;
    margin-top: 15px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin: auto;width:100%;
}
  .progress-icon{position:relative;}
 .cart__contents{
       margin-top: 0rem;
 }

 .progress-icon:before {
    content: "";
    width: 38px;
    height: 24px;
    background-repeat: no-repeat;
    background-size: auto;
    background-position: center;
    background-image:  url({{ "shipping.png" | asset_url}});
    display:block;
    right: -3px; /*adjusted to match BG color*/
    top: auto;
    bottom: -11px;
    position: absolute;
    z-index: 1;  
} 

progress[value]::-webkit-progress-bar {
	background-color: rgba(var(--color-background), 0.5);
}
 
progress[value]::-webkit-progress-value {
	position: relative;
	border-radius:0;
    background-color:  rgb(var(--color-button));
}

progress[value]::-moz-progress-bar {

	border-radius:5px;
  	background-color: rgb(var(--color-link-hover));
}
@-webkit-keyframes blinkers {
  0% {
    transform: translateY(-50%) scale(0.9);
  }
  50% {
    transform : translateY(-50%) scale(0.95);
  }
  100% {
    transform: translateY(-50%) scale(1);
  }
}
@keyframes blinkers {
  0% {
    transform: translateY(-50%) scale(0.9);
  }
  50% {
     transform : translateY(-50%) scale(1);
  }
  100% {
    transform: translateY(-50%) scale(0.9);
  }
}
progress:after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-image: linear-gradient(135deg,rgba(var(--color-foreground), 0.15) 0,rgba(var(--color-foreground), 0.15) 25%,rgba(var(--color-foreground), 0) 25%,rgba(var(--color-foreground), 0) 50%,rgba(var(--color-foreground), 0.15) 50%,rgba(var(--color-foreground), 0.15) 75%,rgba(var(--color-foreground), 0) 75%,rgba(var(--color-foreground), 0) 100%);
    z-index: 1;
    -webkit-animation: move 5s linear infinite;
    border-radius: 0;
    overflow: hidden;
    background-size: 3rem 3rem;
}
@keyframes move{
0% {
    background-position: 0 0;
}
100% {
    background-position: -60px -60px;
}
  }

.cart-template cart-items .cart-progress .free-shipping  .cart-progress-bar{display:none;}
.cart-progress .free-shipping  strong{    font-weight: 400;color: rgba(var(--color-base-outline-button-labels));}
/* La messaggistica Ã¨ stata rimossa dal markup; nessuna regola di hide necessaria */
</style>
{% endunless %}
